<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sara.account.dao.ShopUserDao">

    <resultMap type="com.sara.account.entity.ShopUserEntity" id="ShopUserMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="userNo" column="user_no" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="actualName" column="actual_name" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="idNo" column="id_no" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="loginPassword" column="login_password" jdbcType="VARCHAR"/>
        <result property="payPassword" column="pay_password" jdbcType="VARCHAR"/>
        <result property="dateCreate" column="date_create" jdbcType="TIMESTAMP"/>
        <result property="dateUpdate" column="date_update" jdbcType="TIMESTAMP"/>
        <result property="creator" column="creator" jdbcType="VARCHAR"/>
        <result property="updater" column="updater" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryByUserNo" resultMap="ShopUserMap">
        select id,
               user_no,
               user_name,
               actual_name,
               sex,
               id_no,
               phone,
               email,
               login_password,
               pay_password,
               date_create,
               date_update,
               creator,
               updater
        from shop_user
        where user_no = #{userNo}
    </select>

    <!--查询单个-->
    <select id="queryByUserName" resultMap="ShopUserMap">
        select id,
               user_no,
               user_name,
               actual_name,
               sex,
               id_no,
               phone,
               email,
               login_password,
               pay_password,
               date_create,
               date_update,
               creator,
               updater
        from shop_user
        where user_name = #{userName}
    </select>

    <!--查询单个-->
    <select id="queryByIdNo" resultMap="ShopUserMap">
        select id,
               user_no,
               user_name,
               actual_name,
               sex,
               id_no,
               phone,
               email,
               login_password,
               pay_password,
               date_create,
               date_update,
               creator,
               updater
        from shop_user
        where id_no = #{idNo}
    </select>

    <!--查询单个-->
    <select id="queryByPhone" resultMap="ShopUserMap">
        select id,
               user_no,
               user_name,
               actual_name,
               sex,
               id_no,
               phone,
               email,
               login_password,
               pay_password,
               date_create,
               date_update,
               creator,
               updater
        from shop_user
        where phone = #{phone}
    </select>

    <!--查询单个-->
    <select id="queryByEmail" resultMap="ShopUserMap">
        select id,
               user_no,
               user_name,
               actual_name,
               sex,
               id_no,
               phone,
               email,
               login_password,
               pay_password,
               date_create,
               date_update,
               creator,
               updater
        from shop_user
        where email = #{email}
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into shop_user(user_no, user_name, actual_name, sex, id_no, phone, email,
                              login_password, pay_password)
        values (#{userNo}, #{userName}, #{actualName}, #{sex}, #{idNo}, #{phone}, #{email},
                #{loginPassword}, #{payPassword})
    </insert>

</mapper>

